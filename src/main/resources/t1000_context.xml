<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true"
>
    <import resource="sony_context.xml"></import>
    <import resource="toshiba_context.xml"></import>
    <import resource="db_context.xml"></import>

    <bean name="t1000" class="springmaventutorial.ModelT1000"
    p:hand-ref="sonyHand"
    p:leg-ref="sonyLeg"
    p:head-ref="sonyHead"
    depends-on="t1000Empty">

        <constructor-arg value="true" index="2" type="boolean"> </constructor-arg>
        <constructor-arg value="silver" index="0" type="java.lang.String"> </constructor-arg>
        <constructor-arg value="2006" index="1" type="int"> </constructor-arg>

    </bean>

    <bean id="t1000Empty" class="springmaventutorial.ModelT1000">
        <constructor-arg ref="sonyHand"></constructor-arg>
        <constructor-arg ref="sonyLeg"></constructor-arg>
        <constructor-arg ref="sonyHead"></constructor-arg>
    </bean>

    <bean class="other.MyBeanPostProcessor"></bean>


</beans>